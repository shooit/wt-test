<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
version="3.0">
    <listener>
        <listener-class>org.scalatra.servlet.ScalatraListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>TaxonomyServlet</servlet-name>
        <servlet-class>shooit.service.taxonomies.TaxonomyServlet</servlet-class>
        <init-param>
            <param-name>org.scalatra.environment</param-name>
            <param-value>development</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>shooit.service.taxonomies.ProductServlet</servlet-class>
        <init-param>
            <param-name>org.scalatra.environment</param-name>
            <param-value>development</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>shooit.service.assets.UserServlet</servlet-class>
        <init-param>
            <param-name>org.scalatra.environment</param-name>
            <param-value>development</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>MachineServlet</servlet-name>
        <servlet-class>shooit.service.assets.MachineServlet</servlet-class>
        <init-param>
            <param-name>org.scalatra.environment</param-name>
            <param-value>development</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/img/*</url-pattern>
        <url-pattern>/css/*</url-pattern>
        <url-pattern>/js/*</url-pattern>
        <url-pattern>/assets/*</url-pattern>
    </servlet-mapping>
</web-app>
